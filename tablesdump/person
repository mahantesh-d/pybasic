CREATE TABLE person (
    person_pk bigint NOT NULL,
    int_updated_date timestamp with time zone,
    int_created_date timestamp with time zone DEFAULT now(),
    int_is_deleted text,
    person_id_key_0 text,
    id_type_data text,
    id_card_no_data text,
    id_card_expire_dt_data timestamp with time zone,
    main_phone_no_data text,
    title_th_data text,
    first_name_th_data text,
    last_name_th_data text,
    title_en_data text,
    first_name_en_data text,
    last_name_e_n_data text,
    nick_name_data text,
    birth_day_dt_data timestamp with time zone,
    gender_data text,
    citizenship_data text,
    nationality_data text,
    created_data timestamp with time zone,
    created_by_data text,
    last_upd_data timestamp with time zone,
    last_upd_by_data text,
    modification_num_data text,
    remark_data text
)
DISTRIBUTE BY REPLICATION;
